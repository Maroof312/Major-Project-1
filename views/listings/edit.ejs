<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Listing</h2>
            <form method="POST" action="/listings/<%= editListing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title : </label>
                    <input name="title" value="<%= editListing.title %>" type="text" class="form-control" required/>
                    <div class="invalid-feedback">Title field is required</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description : </label>
                    <textarea name="description" class="form-control" required><%= editListing.description %></textarea>
                    <div class="invalid-feedback">Description field is required</div>
                </div>
                <div class="mb-3">
                    <img src="<%=originalImageUrl%>"/>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image : </label>
                    <input name="listing[image]" value="editListing.image" type="file" class="form-control"/>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price : </label>
                        <input name="price" value="<%= editListing.price %>" type="text" class="form-control" required/>
                        <div class="invalid-feedback">Price field is required</div>
                    </div>
                    <div class="mb-3 col-md-4">
                        <label for="location" class="form-label">Location : </label>
                        <input name="location" value="<%= editListing.location %>" type="text" class="form-control" required/>
                        <div class="invalid-feedback">Location field is required</div>
                    </div>
                    <div class="mb-3 col-md-4">
                        <label for="country" class="form-label">Country : </label>
                        <input name="country" value="<%= editListing.country %>" type="text" class="form-control" required/>
                        <div class="invalid-feedback">Country field is required</div>
                    </div>
                </div>
                <button class="btn btn-dark add-btn mt-3">Edit</button>
            </form>
        </div>
    </div>
</body>
